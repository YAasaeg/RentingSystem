<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_house_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_house_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House Title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_house_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 2500 / Month"
                    android:textColor="@color/secondary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="户型："
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_house_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2室1厅"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>
                    
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面积："
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_house_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80㎡"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址："
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tv_house_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址..."
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态："
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tv_house_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可租"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_status_badge"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/layout_tenant_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/surface"
        android:elevation="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_contact"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="联系房东"
            android:textColor="@color/secondary"
            app:strokeColor="@color/secondary"
            android:layout_marginEnd="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <Button
            android:id="@+id/btn_reserve"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="预约看房"
            android:textColor="@color/secondary"
            app:strokeColor="@color/secondary"
            android:layout_marginEnd="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <Button
            android:id="@+id/btn_apply"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="申请租房"
            android:textColor="@color/secondary"
            app:strokeColor="@color/secondary"
            android:layout_marginEnd="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>
    </LinearLayout>
    
    <!-- Landlord Action (Back Button is usually in Toolbar, but here we add explicit bottom bar as requested if needed, or just default back behavior) -->
    <!-- The user said: "if landlord, show house details and back button". Android has hardware/gesture back. -->
    <!-- But to match the request explicitly, I'll add a visible "Back" button for landlord at bottom or rely on top bar. -->
    <!-- Let's add a simple bottom bar for Landlord too for consistency, or just a big Back button. -->
    
    <LinearLayout
        android:id="@+id/layout_landlord_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/surface"
        android:elevation="8dp"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_back"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返 回"
            android:textColor="@color/text_secondary"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:strokeColor="@color/text_secondary"/>
    </LinearLayout>

</LinearLayout>
