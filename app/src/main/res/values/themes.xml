<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentingSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Custom Button Style -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Custom EditText Style (Background) -->
    <style name="AppEditTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>
